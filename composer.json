{
  "name": "UsabilityDynamics/wp-elastic",
  "description": "Improve WordPress search performance/accuracy and enable faceted search by leveraging an ElasticSearch server.",
  "version": "2.4.0",
  "type": "wordpress-plugin",
  "keywords": [
    "elasticsearch",
    "wordpress",
    "search"
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "http://repository.usabilitydynamics.com"
    },
    {
      "type": "git",
      "url": "git@github.com:UsabilityDynamics/wp-elastic.git"
    }
  ],
  "authors": [
    {
      "name": "Andy Potanin",
      "homepage": "http://usabilitydynamics.com"
    },
    {
      "name": "Paris Holley",
      "homepage": "http://parisholley.com"
    }
  ],
  "config": {
    "vendor-dir": "vendor/libraries",
    "optimize-autoloader": true,
    "autoloader-suffix": "VendorPackages"
  },
  "extra": {
    "installer-paths": {
      "vendor/plugins/{$name}": [
        "type:wordpress-plugin"
      ],
      "vendor/modules/{$name}": [
        "type:wordpress-module"
      ],
      "vendor/themes/{$name}": [
        "type:wordpress-theme"
      ]
    }
  },
  "autoload": {
    "classmap": [ "lib" ],
    "files":    [ "api/global.php" ]
  },
  "require": {
    "php": ">=5.3",
    "composer/installers": "~1.0",
    "usabilitydynamics/lib-settings": "master",
    "usabilitydynamics/lib-utility": "master",
    "usabilitydynamics/lib-api": "master",
    "usabilitydynamics/lib-rpc": "master",
    "usabilitydynamics/lib-ui": "master"
  },
  "scripts": {
    "pre-install-cmd": [
      "npm install --silent",
      "grunt clean:install"
    ],
    "post-install-cmd": [
      "grunt install --force"
    ]
  },
  "license": "GPLv2",
  "minimum-stability": "dev"
}
